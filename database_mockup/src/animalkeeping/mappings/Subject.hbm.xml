<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="animalkeeping.model">
    <class name="Subject" table="census_subject">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" type="string" column="name" unique="true" not-null="true"/>
        <property name="alias" type="string" column="alias" not-null="false"/>
        <many-to-one name="subjectType" column="type_id" class="SubjectType" not-null="true"/>
        <many-to-one name="speciesType" column="species_id" class="SpeciesType" not-null="true"/>
        <many-to-one name="supplier" column="source_id" class="SupplierType" not-null="false"/>
        <set name="treatments" table="census_treatment" cascade="save-update, delete"
             inverse="true" lazy="true" fetch="select">
            <key>
                <column name="subject_id" not-null="false" />
            </key>
            <one-to-many class="Treatment" />
        </set>
        <set name="housings" table="census_housing" cascade="save-update, delete"
             inverse="true" lazy="true" fetch="select">
            <key>
                <column name="subject_id" not-null="true" />
            </key>
            <one-to-many class="Housing" />
        </set>


    </class>
</hibernate-mapping>