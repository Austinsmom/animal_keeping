<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="animalkeeping.model">

    <class name="DatabaseUser" table="databaseuser">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" type="string" column="name" not-null="true" unique="true"/>
        <many-to-one name="person" column="person_id" class="Person" not-null="true"/>
        <many-to-one name="type" column="type_id" class="DatabaseUserType" not-null="true"/>
    </class>

</hibernate-mapping>
