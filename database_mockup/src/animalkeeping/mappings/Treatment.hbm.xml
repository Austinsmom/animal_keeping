<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="animalkeeping.model">
    <class name="Treatment" table="census_treatment">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="start"  type="timestamp" column="start_datetime" not-null="true"/>
        <property name="end"  type="timestamp" column="end_datetime" not-null="false"/>

        <many-to-one name="type" column="type_id" class="TreatmentType" not-null="true"/>
        <many-to-one name="person" column="person_id" class="Person" not-null="true"/>
        <many-to-one name="subject" column="subject_id" class="Subject" not-null="true"/>

    </class>
</hibernate-mapping>